---
import TeamCard from '@/landing/components/TeamCard.astro';
import ScrollingBanner from "@/landing/components/ScrollingBanner.astro";
const logos = [
  "/logo_chocolateros.webp",
  "/logo_fieles.webp",
  "/logo_chistemas.webp",
  "/logo_glitchers.webp",
];
const teams = [
  {
    id: 'promocion2021',
    name: 'Chocolateros FC',
    logo: '/logo_chocolateros.webp',
    players: ['José Vásquez', 'Jhomber Córdova', 'Anderson Luján', 'Luis Gonzales', 'Dica Portal', 'Miguel Flores', 'Rodrigo Trejo', 'Jaime Marcelo', 'Marlon Paredes', 'Jhon Sánchez', 'Rodrigo Zelada', 'José Torres'],
  },
  {
    id: 'promocion2022',
    name: 'Los Fieles FC',
    logo: '/logo_fieles.webp',
    players: [''],
  },
  {
    id: 'promocion2023',
    name: 'CHISTEMAS FC',
    logo: '/logo_chistemas.webp',
    players: ['Alonso Roque', 'Alexander Garrido', 'César Rodas', 'Fernando Ferre', 'Marcos Lopez', 'Ariel Rodriguez', 'Anghel Tafur', 'Yordi Lago', 'Ari Lozano', 'Victor Ling'],
  },
  {
    id: 'promocion2024',
    name: 'Glitchers FC',
    logo: '/logo_glitchers.webp',
    players: ['',],
  },
];
---

<section id="equipos" class="py-16">
  <ScrollingBanner logos={logos} speed='fast' logoSize='lg' gap='lg'/>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <span class="inline-block px-3 py-1 text-sm font-medium text-keppel bg-keppel/10 rounded-full mb-4">
        Copa Sistemas UNS 2025
      </span>
      <h2 class="text-4xl font-bold text-gray-900">
        Equipos <span class="text-berkeley">Participantes</span>
      </h2>
      <div class="w-24 h-1.5 bg-keppel/80 mx-auto mt-4 rounded-full"></div>
      <p class="mt-6 text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Descubre los equipos que competirán por el título este año.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {teams.map((team) => (
        <TeamCard team={team} />
      ))}
    </div>
  </div>
</section>