---
const links = [
  { name: 'Inicio', href: '#inicio' },
  { name: 'Equipos', href: '#equipos' },
  { name: 'Fixture', href: '#fixture' },
  { name: 'Inscripciones', href: '#inscription' },
];
---

<nav id="main-navbar" class="fixed w-full z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex-shrink-0 flex items-center">
        <a href="#inicio">
          <img 
            src="/logo.webp" 
            alt="Copa Sistemas 2025"
            class="h-10 md:h-12 w-auto transition-all duration-300"
            id="navbar-logo"
          >
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8">
        {links.map((link) => (
          <a
            href={link.href}
            class="text-white md:text-berkeley hover:text-keppel font-medium transition-colors duration-300"
          >
            {link.name}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button
          class="inline-flex items-center justify-center p-2 rounded-md text-white focus:outline-none"
          aria-label="Main menu"
          id="mobile-menu-button"
        >
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="hidden md:hidden bg-gradient-to-b from-theme-blue to-theme-keppel shadow-lg" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {links.map((link) => (
        <a
          href={link.href}
          class="block px-3 py-2 rounded-md text-base font-medium text-berkeley hover:text-keppel"
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<script is:inline>
  // Toggle mobile menu
  document.getElementById('mobile-menu-button').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });

  // Scroll effect for navbar
  window.addEventListener('scroll', function() {
    const navbar = document.getElementById('main-navbar');
    if (window.scrollY > 50) {
      navbar.classList.add('bg-gradient-to-r','from-theme-blue','to-theme-keppel', 'shadow-md');
      navbar.classList.remove('text-white');
    } else {
      navbar.classList.remove('bg-gradient-to-r','from-theme-blue','to-theme-keppel', 'shadow-md');
      navbar.classList.add('text-white');
    }
  });

  // Initialize navbar state on load
  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.getElementById('main-navbar');
    if (window.scrollY > 50) {
      navbar.classList.add('bg-gradient-to-r','from-theme-blue','to-theme-keppel', 'shadow-md');
      navbar.classList.remove('text-white');
    } else {
      navbar.classList.remove('bg-gradient-to-r','from-theme-blue','to-theme-keppel', 'shadow-md');
      navbar.classList.add('text-white');
    }
  });
</script>

<style>
  /* Asegurar que el navbar est√© sobre el contenido del hero */
  #main-navbar {
    backdrop-filter: blur(0px);
    transition: background-color 0.3s, backdrop-filter 0.3s;
  }
  
  #main-navbar.scrolled {
    backdrop-filter: blur(10px);
  }
  
  /* Mejorar la legibilidad del texto blanco sobre el hero */
  @media (max-width: 767px) {
    #main-navbar:not(.bg-white) a,
    #main-navbar:not(.bg-white) span {
      text-shadow: 0 1px 3px rgba(0,0,0,0.5);
    }
  }
</style>